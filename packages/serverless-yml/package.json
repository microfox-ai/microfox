{
  "name": "@microfox/serverless-yml",
  "version": "1.0.0",
  "description": "Serverless YML - Validate and update serverless.yml files",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint \"./**/*.ts*\"",
    "prettier-check": "prettier --check \"./**/*.ts*\"",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@microfox/tsconfig": "*",
    "@sparticuz/chromium": "^137.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^18",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8",
    "typescript": "5.6.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://github.com/microfox-ai/microfox",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microfox-ai/microfox.git"
  },
  "bugs": {
    "url": "https://github.com/microfox-ai/microfox/issues"
  },
  "keywords": [
    "puppeteer",
    "sls",
    "ai",
    "sdk",
    "microfox",
    "typescript"
  ]
}
