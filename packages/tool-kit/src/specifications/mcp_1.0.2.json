{
  "mcpVersion": "1.0.2",
  "info": {
    "title": "My Tool Kit API",
    "version": "1.0.0",
    "description": "A sample MCP specification for a tool kit with reusable auth providers.",
    "packageName": "@microfox/my-tool-kit",
    "contact": {
      "name": "Dev Support",
      "email": "support@example.com"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/invoke",
      "description": "Unified wrapper endpoint"
    }
  ],
  "components": {
    "x-auth-packages": [
      {
        "packageName": "@microfox/my-tool-kit",
        "packageConstructor": "MyClient"
      }
    ],
    "x-auth-custom-secrets": ["PROVIDER_CLIENT_SECRET"],
    "x-auth-providers": {
      "defaultProvider": {
        "path": "/auth/getToken",
        "method": "POST",
        "description": "call this endpoint to get a token",
        "responseMapping": {
          "strategy": "'apikey'",
          "variables": [
            {
              "key": "'default_api_key'",
              "value": "$.token"
            }
          ]
        }
      },
      "specificProvider": {
        "path": "/auth/getSpecificToken",
        "method": "GET",
        "responseMapping": {
          "strategy": "'apikey'",
          "variables": [
            {
              "key": "'specific_api_key'",
              "value": "$.specific_key"
            }
          ]
        }
      }
    },
    "x-human-in-the-loop-providers": {
      "defaultApproval": {
        "type": "approval",
        "description": "Requires a simple yes/no approval from the user."
      },
      "dataEntry": {
        "type": "form",
        "description": "Presents a form to the user to fill in missing details.",
        "ui": {
          "componentName": "CustomDataEntryForm",
          "requiredParameters": ["notes", "confirmation_code"]
        }
      }
    }
  },
  "paths": {
    "/MyClient/myMethod": {
      "post": {
        "name": "My Methos",
        "operationId": "myClient.myMethod",
        "summary": "A sample method.",
        "description": "This is a very long description of the method and what it does.",
        "auth": "specificProvider",
        "x-human-in-the-loop": "dataEntry",
        "headers": {
          "x-auth-secrets": {
            "type": "string",
            "description": "Encrypted authentication secrets"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "body": {
                    "type": "object",
                    "description": "Body of the SLS call",
                    "properties": {
                      "arguments": {
                        "type": "array",
                        "items": [
                          {
                            "type": "object",
                            "description": "Configuration object",
                            "properties": {
                              "param1": {
                                "type": "string",
                                "description": "Description of parameter 1."
                              },
                              "param2": {
                                "type": "number",
                                "description": "Description of parameter 2."
                              }
                            },
                            "required": ["param1"]
                          }
                        ]
                      },
                      "secrets": {
                        "type": "object",
                        "description": "The secrets object",
                        "properties": {
                          "p": { "type": "string" }
                        }
                      },
                      "constructorName": {
                        "type": "string",
                        "description": "Name of the constructor to use.",
                        "default": "MyClient"
                      }
                    },
                    "required": ["arguments"]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" },
                    "result": {
                      "type": "object",
                      "description": "The result of the method call."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean", "const": false },
                    "error": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/MyClient/anotherMethod": {
      "post": {
        "operationId": "myClient.anotherMethod",
        "summary": "Another sample method that uses the default auth.",
        "headers": {
          "x-auth-secrets": {
            "type": "string",
            "description": "Encrypted authentication secrets"
          }
        },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "body": {
                    "type": "object",
                    "properties": {
                      "arg1": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Successful response" }
        }
      }
    }
  }
}
