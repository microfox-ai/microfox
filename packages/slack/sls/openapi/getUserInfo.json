                },
                "real_name": {
                  "type": "string",
                  "description": "The user's real name."
                },
                "tz": {
                  "type": "string",
                  "description": "The user's timezone (e.g., America/Los_Angeles)."
                },
                "tz_label": {
                  "type": "string",
                  "description": "A human-readable string for the user's timezone."
                },
                "tz_offset": {
                  "type": "integer",
